<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="650.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.PlanMakerController">
    <left>
        <VBox prefHeight="650.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="325.0" prefWidth="200.0" />
                <ScrollPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="325.0" prefWidth="200.0">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" />
                    </content>
                </ScrollPane>
            </children></VBox>
    </left>
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="650.0" prefWidth="400.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="home" alignment="TOP_RIGHT" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#connectToHomePage" text="Home" textFill="#216065">
                    <VBox.margin>
                        <Insets left="300.0" top="5.0" />
                    </VBox.margin>
                </Button>
                <StackPane prefHeight="20.0" prefWidth="50.0">
                    <children>
                        <TextArea fx:id="textArea" onKeyPressed="#onEnterPressed" prefHeight="20.0" prefWidth="50.0" visible="false">
                            <StackPane.margin>
                                <Insets left="5.0" right="5.0" top="10.0" />
                            </StackPane.margin>
                        </TextArea>
                        <Label fx:id="label" alignment="CENTER" onMouseClicked="#onLabelClick" prefHeight="20.0" prefWidth="300.0" text="Add Lesson Name" textFill="#216065">
                            <StackPane.margin>
                                <Insets top="10.0" />
                            </StackPane.margin>
                        </Label>
                    </children>
                </StackPane>
            <HBox prefHeight="550.0" prefWidth="200.0" />
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
              <buttons>
                <Button mnemonicParsing="false" text="Print" textFill="#216065" />
                  <Button mnemonicParsing="false" text="Save" textFill="#216065" />
                  <Button mnemonicParsing="false" text="Edit" textFill="#216065" />
              </buttons>
               <VBox.margin>
                  <Insets bottom="5.0" right="10.0" />
               </VBox.margin>
            </ButtonBar>
            </children>
        </VBox>
    </center>
</BorderPane>
